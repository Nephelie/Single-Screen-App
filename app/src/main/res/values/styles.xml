<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#45a33e</item>
        <item name="colorPrimaryDark">#329943</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--ScrollView Style.-->
    <style name="scrollViewStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fillViewport">true</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!--RelativeLayout Style.-->
    <style name="RelativeLayoutStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--Main ImageView Style.-->
    <style name="MainImageView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!--Brand Icon ImageView Style.-->
    <style name="BrandImageView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--LinearLayout Style.-->
    <style name="LinearLayoutStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--Business Name TextView Style.-->
    <style name="BusinessNameStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">35sp</item>
    </style>

    <!--Slogan TextView Style-->
    <style name="SloganTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--Subscription TextView Style.-->
    <style name="SubscriptionStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Newsletter Button Style.-->
    <style name="NewsletterStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Contact Information TextView Style.-->
    <style name="ContactInfo">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/blackTransparent</item>
    </style>

</resources>
